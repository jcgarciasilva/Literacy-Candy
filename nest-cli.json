{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "../views/**/*", "watchAssets": true },
      { "include": "../public/**/*", "watchAssets": true }
    ]
  }
  
}

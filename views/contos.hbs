<section class="border-b bg-white py-8">
<div class='pt-12 min-h-screen'>
  <div class='container max-w-5xl mx-auto m-8'>
    <h2 class='w-full my-2 text-5xl font-bold leading-tight text-center text-gray-800'>
      {{this.tales_header}}
    </h2>
    <div class="w-full mb-4">
      <div class="h-1 mx-auto gradient w-64 opacity-25 my-0 py-0 rounded-t"></div>
    </div>
    <p class="text-gray-600 mb-8">
      {{{this.tales_desc}}}
    </p>
  </div>

  <div class='container max-w-5xl mx-auto m-8'>
    <h2 class='w-full my-2 text-5xl font-bold leading-tight text-center text-gray-800'>
      {{this.tales_header_in}}
    </h2>
    <div class="w-full mb-4">
      <div class="h-1 mx-auto gradient w-64 opacity-25 my-0 py-0 rounded-t"></div>
    </div>
    <p class="text-gray-600 mb-8">
      {{{this.tales_desc_in}}}
    </p>
  </div>

  <div  class='container mx-auto flex flex-col pt-4 pb-12'>

    {{#each books}}

      <div class=" border border-gray-300 shadow rounded-md p-4 max-w-sm w-full mx-auto mb-20">
        <div class="flex space-x-4">
          <div class="w-full md:w-2/4 py-6 text-center ">
            <img class="w-full md:w-24 h-36 z-50 " alt="{{this.title}}" src="{{this.image}}" />
          </div>
      
          <div class="flex-1 space-y-6 py-1">
            <div class="space-y-3 ">
              <p class="text-gray-800">
                {{this.description}}
              </p>
              <div class="mt-15">
              <a class="text-gray-800 hover:underline hover:underline-offset-1 mt-10" href="{{this.downloadLink}}" >download</a>
              </div>
            </div>
          </div>
        </div>
      </div>

      
    {{/each}}

  </div>

</div>

</section>

{{>detailsScripts}}